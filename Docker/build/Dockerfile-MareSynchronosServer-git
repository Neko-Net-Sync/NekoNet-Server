FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

RUN git clone --recurse-submodules https://github.com/Neko-Net-Sync/NekoNet-Server

WORKDIR /server/NekoNet-Server/MareSynchronosServer/MareSynchronosServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/MareSynchronosServer \
        NekoNetServer.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare

COPY --from=BUILD /NekoNetServer /opt/MareSynchronosServer
RUN chown -R mare:mare /opt/MareSynchronosServer
RUN apt-get update; apt-get install curl -y

USER mare:mare
WORKDIR /opt/MareSynchronosServer

CMD ["./MareSynchronosServer"]
