FROM mcr.microsoft.com/dotnet/sdk:9.0 AS BUILD
RUN git clone --recurse-submodules https://github.com/Neko-Net-Sync/NekoNet-Server
WORKDIR /NekoNet-Server/NekoNetServer/NekoNetServices/
RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/NekoNetServices \
        NekoNetServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0
RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare
COPY --from=BUILD /NekoNetServices /opt/NekoNetServices
RUN chown -R mare:mare /opt/NekoNetServices && \
    apt-get update && apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*
USER mare:mare
WORKDIR /opt/NekoNetServices
CMD ["./NekoNetServices"]
